    <title>델리의 귀염뽀짝 할수이따 앱</title>
  </head>
  <body>

      <%- include('nav.html') %>

      <div class="container input-group mb-1">
        <input class="form-control" id = "search-input" style="width:5px">
        <button class="input-group-append btn btn-danger" id = "search">검색</button>
      </div>
    
   

        
      <ul class="list-group">

        <% for(var i= 0;i<posts.length;i++){ %>
        <li class="list-group-item">
          
            <h5>할 일 제목 : <%= posts[i].제목 %></h5>
            <p>날짜 : <%= posts[i].날짜 %></p>
            <a class="btn btn-outline-success delete" data-id ="<%= posts[i]._id%>">삭제</button> <!-- data-id는 html문법 몰래 아이디를 숨길 수 있음!-->
               <!--수정버튼을 누르면 edit.ejs로 들어가기-->
            
            <button onclick="location.href='/edit/'+'<%= posts[i]._id %>' " class="btn btn-outline-success update" data-id="<%= posts[i]._id %>" >수정</button>
           
        <% } %>  

        
          
        </li>
      
    </ul>


    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>



    <script> 
    
  
    $('#search').click(function(){
      var 입력한값 = $('#search-input').val()  //input 유저가 입력한 값
      window.location.replace('/search?value='+입력한값)   // url을 바꿔주세요

    })



       

    







 
  

 


    $('.delete').click((e)=>{ // e : 이벤트 객체
      var number = e.target.dataset.id; 
      var event = $(e.target); // this는 현재 지금 이벤트 동작하는 곳! 
// 변수 글번호 선언.
// e.target : 실제로 내가 누른 요소 (지금 내가 클릭한 것)
// dataset.id : 내가 지금 누른 요소 중 숨겨져있는 id를 가져와!
  
      $.ajax({
        method : 'DELETE',
        url : '/delete',
        data: {_id: number}
      }) .done((res)=>{
        console.log('성공해써용'); // 브라우저 콘솔창에 나오기
        event.parent('li').fadeOut();
        
        //.parent() = ~의 부모태그를 찾아줘ㅠ 따라서 지금 누른 버튼의 부모태그를 찾아줭 ex ) 현재 버튼 누른 li태그 찾아줘
        // 내가 지금 누른 버튼의 부모 중 li가 있으면 그거 숨겨줘!
  
      }) .fail((res)=>{ // a,b,c 뜻 : xhr,textStatus,errorthrown
        console.log('실패'); 


      });
      })

      
 


    
    
    </script>

   

