  <%- include('./nav.html') %>



    <h1 class="profile-title ml-2 my-5"> 프로필 </h1>
    <div class="card">
    <form action = "/mypage/profile/update?_method=PUT" method = "post">
      
        <div class="user-box">
          <span>*</span><label>Username(이름)</label> 
            <input type="text" name="name" required="" value="<%= profile.name %>">
        </div>
          <div class="user-box">
            <label id="email">Email(이메일)</label>
            <input type="text" name="Email"  required="" value="<%= profile.Email %>">
          </div>
          <div class="user-box">
            <span>*</span><label>ID(아이디)</label>
            <input type="text" name="id"  required="" value="<%= profile.id %>">
          </div>
          <div class="user-box">
            <span>*</span><label>Password(비밀번호)</label>
            <input type="password" name="pw" required="">
          </div>
          <div class="user-box">
            <span>*</span><label>Password(한번 더 입력)</label>
            <input type="password" name="rePW" required="">
          </div>
        
          <input type="submit" id="submit" value="수정">
        </form>
      
        <button id="delete" data-id="<%= profile._id %>">탈퇴</button>  
    </div>
    </body>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
