  <%- include('nav.html') %>



    <h1 class="ml-2 my-5  text-center"> 프로필(수정하기) </h1>

    <form action = "/mypage/profile?_method=PUT" method = "POST">
        <div class="user-box">
            <input type="text" name="name" required="" value="<%= profile.name %>">
            <label>Username</label>
          </div>
          <div class="user-box">
            <input type="text" name="Email"  required="" value="<%= profile.Email %>">
            <label>Email</label>
          </div>
          <div class="user-box">
            <input type="text" name="id"  required="" value="<%= profile.id %>">
            <label>ID</label>
          </div>
          <div class="user-box">
            <input type="text" name="pw" required="">
            <label>Password</label>
          </div>
          <input type="submit" id="submit" value="수정">
        </form>
        <button id="delete" data-id="<%= profile._id %>">탈퇴


    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>


    $('#delete').click(function(e){
      var Data = e.target.dataset.id;
      if(Data){
        alert("정말 탈퇴하시겠습니까?");
      }
      
      $.ajax({
        method:'DELETE',
        url:'./profile/delete',
        data:{_id:Data}

      }).done((result)=>{
        alert('탈퇴되었습니다.');
        window.location='/';
      
    }).fail((xhr,code,err)=>{
      console.log(err);
      //AJAX 실패시 실행할 코드적기
    });
  });

</script>


