  <body>
    
    
    <%- include('./nav.html') %>



  
 
  <div class = "catainer">  
    <h3 class = "qnaDetail">상세페이지</h3>
    
    <div class="card">
      <div class = "catainer-box">
        <label>제목:</label>
        <div class="card-title" id="header" name = "title">
           <%= data.제목 %>
        </div>
      </div>
      <div class = "catainer-box">
        <label>작성자:</label>
        <div class="card-name">
          <%= data.작성자 %>
       </div> 
      </div>


        <div class="card-body">
          <div class="body-data" name = "data">
            <p id = "body"> <%= data.내용 %> </p>
          </div>
          
        </div>
        
      </div>
      <div class="card-btn">
        <button id="update" data-id="<%= data._id %>"  >수정</button>
        <button id="delete" data-id="<%= data._id %>" >삭제</button>
      </div>
      
      <div class = comment>
        <% for (let i=0; i < commentdata.length; i++){ %>
          <ul class="list-group-comment" value="<%= data._id %>">
            <li class="list-group-item-comment">
              <span><%= commentdata[i].댓글작성자 %></span>
              <p><%= commentdata[i].댓글 %></p>
            </li>
          </ul>  
          <%  } %>
        
        <form action="/comment" method="post">

            <div id ="data-none">
              <input type="text" id="Username" value="<%= data.작성자 %>" >
              <input type="text" name="parentnumber" value="<%= data._id %>" >
            </div>

            <div class="comment-box">
              <input type="text" id="commentwriter" value="<%= dataid.id %>">
            </div> 
            <div class = "comment-box">
              <textarea id="comment" name="comment" placeholder="내용 입력" required=""></textarea>
            </div>
            <div class = "comment-btn">
              <button class="button" data-id="<%= data._id %>">등록</button>
            </div>
            
          </form>
        </div>
          
            
         
  </div>

  
  <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
<script type="text/javascript" src="../public/javascript/detail.js"></script>


