            </select>
            </div>
            </div>
                
    </div>   
        
        <div class="form-group">
            <label >가격</label>
            <input type = "text" class="form-control" name="price" placeholder="숫자만 입력">
        </div>
        
        <div class="form-group">
            <label >설명</label>
            <input type = "text" class="form-control" name="explanation" style="height: 100px;" placeholder="상품의 하자 등 필요한 정보는 꼭 작성해주세요">
        </div>
        <div class="form-group">

          <lavel>이미지 등록</lavel> <br>
            <input type="file" name="프로필">

        </div>




        
        <input type="submit" class="btn btn-outline-secondary"  value="저장하기">
        
      </form>
      
      
    <script>

    var groupData = ["-----", "아이돌", "배우"];
    var issueData = {
  "-----": [],
  "아이돌": ["-----", "소녀시대","샤이니","엑소","BTS","스트레이키즈","NCT","더보이즈","세븐틴","에스파","아이브","르세라핌","뉴진스","스테이씨"],
  "배우": ["-----","이민호","이종석","송강","김영대"]
  
};
var detailData = {
  "-----": [],
  "소녀시대": [],
  "샤이니": [],
  "엑소": [],
  "BTS": [],
  "스트레이키즈": [],
  "NCT": [],
  "더보이즈": [],
  "세븐틴": [],
  "에스파": [],
  "아이브": [],
  "르세라핌": [],
  "뉴진스": [],
  "스테이씨": [],
  "이민호": [],
  "이종석": [],
  "송강": [],
  "김영대": [],

 

};

var $group = $("#group");
var $issue = $("#issue");
var $detail = $("#detail");

function newIssue(selected) {
  $issue.empty();
  $.each(issueData[selected], function(index, value) {
    $issue.append("<option>" + value + "</option>");
  });
}

function newDetail(selected) {
  $detail.empty();
  console.log("Selected Issue: " + selected);
  $.each(detailData[selected], function(index, value) {
    $detail.append("<option>" + value + "</option>");
  });
}

$(document).ready(function() {
  $.each(groupData, function(index, value) {
    $group.append("<option>" + value + "</option>");
  });

  $group.change(function() {
    var selected = $(this).find('option:selected').val();
    newIssue(selected);
  });
  $issue.change(function() {
    var selected = $(this).find('option:selected').val();
    newDetail(selected);
  });
});



        </script>
      


    




