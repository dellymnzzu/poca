    <h1 style="border-bottom:1px solid gray; ">포카등록</h1>
    
    <form class="form-horizontal" action="/addwirte" method="post" enctype="multipart/form-data"> 

        <div class="form-group">
          <label >제목</label>
          <input type="text" class="form-control"  name = "pocatitle">
        </div>
        
        
     <div class="form-group" id="border" >
        <div calss="categorygroup">
                <label class="control-label col-lg-4" for="group"> Category Group</label>
                <div class="col-lg-6">
                    <select name="group" id="group" class="form-control">
            </select>
            </div>
        </div>
            

        <div class="categoryissue">
            <label class="control-label col-lg-4" for="issue">Category Issue</label>
            <div class="col-lg-6">
                <select name="issue" id="issue" class="form-control">
            </select>
            </div>
        </div>

        <div class="categorydetail">
            <label class="control-label col-lg-4" for="detail">Category Detail</label>
