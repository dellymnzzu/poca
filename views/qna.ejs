    <%- include('nav.html') %>
    
   

    <div class="container input-group mb-2">
      <input class="form-control" id = "search-input">
      <button class="input-group-append btn btn-danger" id = "search">검색</button>
    </div>
                
           
        <!-- board seach area -->
      
               
       
      <!-- board list area -->
        <div id="board-list">
            <div class="container">
                <table class="board-table">
                    <thead>
                    <tr>
                        <th scope="col" class="th-num">num</th>
                        <th scope="col" class="th-title">title</th>
                        <th scope="col" class="th-date">data</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i= 0;i<posts.length;i++){ %>
                     <tr>
                       <td>
                         <%= posts[i]._id%>
                         
                        </td>
                        <th>
                          
                          <a onclick="location.href='/detail/'+'<%= posts[i]._id %>'" class="titledetail" data-id="<%= posts[i]._id %>"><%= posts[i].제목%></a>
                          
                        </th>
                        <td><%= posts[i].날짜%></td>

                        <% } %> 
                    </tr>
    
                    
                  </tbody>
                </table>
              </div>
              <button type="submit" onclick="location.href='/write'" float="right" class="btn btn-secondary">글쓰기</button>
            </div>
    
    </section>


    



    <script> 



   



    $('.delete').click((e)=>{ // e : 이벤트 객체
      var number = e.target.dataset.id; 
      var event = $(e.target); // this는 현재 지금 이벤트 동작하는 곳! 
// 변수 글번호 선언.
// e.target : 실제로 내가 누른 요소 (지금 내가 클릭한 것)
// dataset.id : 내가 지금 누른 요소 중 숨겨져있는 id를 가져와!
  
      $.ajax({
        method : 'DELETE',
        url : '/delete',
        data: {_id: number}
      }) .done((res)=>{
        console.log('성공해써용'); // 브라우저 콘솔창에 나오기
        event.parent('li').fadeOut();
        
        //.parent() = ~의 부모태그를 찾아줘ㅠ 따라서 지금 누른 버튼의 부모태그를 찾아줭 ex ) 현재 버튼 누른 li태그 찾아줘
        // 내가 지금 누른 버튼의 부모 중 li가 있으면 그거 숨겨줘!
  
      }) .fail((res)=>{ // a,b,c 뜻 : xhr,textStatus,errorthrown
        console.log('실패'); 


      });
      })

      
 


    
    
    </script>

   

